<div class="summary">
  Note
  <% if pdata['type'] == 'add' %>
    added
  <% elsif pdata['type'] == 'delete' %>
    deleted
  <% elsif pdata['type'] == 'update' %>
    updated
  <% end %>
  by <%=h user.to_s %>
</div>

<div class="body">
  <span class="timeline-note">
    <blockquote>
      <%= $markdown.render(pdata['text']) %>
    </blockquote>
  </span>
</div>