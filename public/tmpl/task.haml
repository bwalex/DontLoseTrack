%script{ :type => "text/x-jsrender",:id => "task-tmpl"}
  .task

    .summary
      %a{ :name => "#task{{:id}}" }
      %span.check
        %input{ :type => "checkbox" }
      %span.imp     {{:importance}}
      %span.summary {{:summary}}
      %span.tags
        {{for tags}}
        %span.tag{ :style => "background-color: {{:color}};" }
          {{:name}}          
        {{/for}}
        
      %span.duedate {{:due_date}}
    
    .body
      .info
        .deps
          {{for task_deps}}
          .dep
            %a{ :href => "#task{{:dependency.id}}" }
              {{:dependency.id}}: {{: dependency.summary.trunc(20, true) }}
          {{/for}}
        .blocked
      .text
        %p {{:text}}

