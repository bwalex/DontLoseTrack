%script{ :type => "text/x-jsrender", :id => "wiki-history-entry-tmpl" }
  %td.checkbox
    :plain
      <input type="checkbox" {{: selected ? "checked" : "" }}/>
  %td.date
    {{:updated_at}}
  %td.user
    %img{ :src => "{{: ~userAvatar(user_id, 24) }}", :alt => "{{: ~userName(user_id, fallback_username) }}", :title => "{{: ~userName(user_id, fallback_username) }}" }
    %span.name
      {{: ~userName(user_id, fallback_username) }}

  %td.comment
    %a{ :href => "#project/{{:~projectId()}}/wikis/{{:wiki_id}}/history/{{:id}}" }
      %span.history-id
        [{{:id}}]
      {{:comment}}
