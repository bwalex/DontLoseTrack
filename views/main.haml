%html
  %head
    -#%link{ :type => "text/css", :href => "/css/smoothness/jquery-ui-1.8.18.custom.css", :rel => "stylesheet" }
    %link{ :type => "text/css", :href => "/css/fluid_grid.css", :rel => "stylesheet" }
    %link{ :type => "text/css", :href => "/css/style.css", :rel => "stylesheet" }
    %link{ :type => "text/css", :href => "/css/pyg_github.css", :rel => "stylesheet" }
    %script{ :src => "/js/require.js" }
    %script{ :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js' }
    -#%script{ :src => "http://cdn.jquerytools.org/1.2.6/all/jquery.tools.min.js" }
    %script{ :src => "/js/jsrender.js" }
    %script{ :src => "/js/jquery.observable.myraw.js" }
    %script{ :src => "/js/jquery.views.myraw.js" }
    %script{ :src => "/js/underscore.js" }
    %script{ :src => "/js/backbone.js" }
    %script{ :src => "/js/backbone-relational.js" }
    %script{ :src => "/js/require.config.js" }
    :javascript
      require(["/js/require.text.js"]);
      require(["/js/require.order.js"]);
      require(['main']);

  %body
    .container_16
      .grid_16#logo
        %h1.logo Donâ€™t Lose Track!

    .container_16#header
      .container_16.clearfix#navbar
        .grid_16
          %ul.menu.tabs
            %li
              %a{ :href => "#tab1" } Timeline
            %li
              %a{ :href => "#tab2" } Notes
            %li
              %a{ :href => "#tab3" } Tasks
            %li
              %a{ :href => "#tab4" } Wikis
            %li
              %a{ :href => "#tab5" } Emails

    .container_16.spacer.clearfix

    .container_16.clearfix#content
      .grid_12
        .panes
          #timeline
          #notes
            .tabmenu
              .ico
                %a.btn_addtag
              .clearer
            #newnote
              %form
                %span.tarea
                  %textarea#newnotetext
                %span.btn
                  %input{ :type => "submit" }
            #notelist

          #tasks
            .tabmenu
              .ico
                %a.btn_addtag
              .ico
                %a.fb_dropdown#task_sorter(data-items = '[{"label": "IntelliSort"}, {"label": "due date"}, {"label": "priority"}]' )
              .ico
                %a.btn_showcompleted
              .clearer

            #newtask
              %input#newtasksummary{ :type => "text" , :value => "Add Task..." }
            #tasklist

          #wikis
          #emails

      .grid_4.clearfix
        #sidebar
          %h3 Filter by Tag
          #newtag
            %span.sidein
              %input#newtagname{ :type => "text" , :value => "Add Tag..." }
          #tagfilterlist
            .tags

    .container_16.spacer.clearfix

    .container_16.clearfix#footer
      .grid_16
        Copyright (C) 2012, Alex Hornung

    #tagdrag.hide
      .tags
      -#%span.rm-icon-2
        %a.rm-button-2{ :href => "javascript:void(0);" }
        .clearer
      .clearer


    .fb_menu#fb_menu{ :style => "display:none;" }
